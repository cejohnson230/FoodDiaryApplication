<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    tools:context="com.example.catherinejohnson.fooddiaryapplication.ActivityTimer">
    <!--EditText allows for user input, while TextView doesn't-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Timer"
        android:textSize="40dp"
        android:gravity="center"
        android:textColor="@android:color/white"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Set # of Minutes:"
        android:gravity="center"
        android:textSize="30dp"/>
    <EditText
        android:id="@+id/activity_handler_et"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:text="2"
        android:gravity="center"
        android:inputType="number"
        android:background="@null"
        android:textSize="150sp"/>
    <TextView
        android:id="@+id/activity_handler_timeleft"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center"
        android:text="Minutes: Seconds:"/>
    <Button
        android:id="@+id/activity_handler_bt"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:text="start"/>
    <TextView
        android:id="@+id/counter"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:text="x"/>
</LinearLayout>
